{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "compilationMode":"partial"
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "common-form-elements": [
        "dist/common-form-elements"
      ],
      "common-form-elements/*": [
        "dist/common-form-elements/*"
      ]
    },
    "skipLibCheck": true
  }
}
